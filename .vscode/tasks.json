{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "clang++ ${file} -std=c++17 -O2 -Wall -o a.out",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "echo": false,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "debug-build",
            "type": "shell",
            "command": "g++ ${file} -std=c++17 -g -Wall -o a.out",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "echo": false,
                "panel": "dedicated"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "clean",
            "type": "shell",
            "command": "git clean -dfX",
            "presentation": {
                "reveal": "never",
                "focus": false,
                "echo": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "taskName": "run",
            "type": "shell",
            "command": "${cwd}/a.out",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "echo": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
